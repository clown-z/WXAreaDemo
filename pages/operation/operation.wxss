/* pages/operation/operation.wxss */
.container {
	padding: 1rem;
	font-size: 0.9rem;
	line-height: 1.5rem;
}

.row {
	display: flex;
	align-items: center;
	margin: 0.8rem;
}

.row text {
	flex-grow: 1;
	text-align: right;
}

.row input {
	width: 10rem;
	font-size: 0.7rem;
	border: 1rpx #0099cc solid;
	display: inline-block;
	border-radius: 0.3rem;
	box-shadow: 0 0 0.15rem #aaa;
	padding: 0.3rem;
	margin-left: 0.5rem;
}

.row button {
	padding: 0 2rem;
	margin: 3rem 1rem;
}
